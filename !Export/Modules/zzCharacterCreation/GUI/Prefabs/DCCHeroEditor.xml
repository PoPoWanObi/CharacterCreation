                <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Popup.Button.Text" Text="@EditAppearanceString" />
              </Children>
            </ButtonWidget>
            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="50" />
            <ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="170" SuggestedHeight="40" DoNotPassEventsToChildren="true" VerticalAlignment="Center" Command.Click="ExecuteName" Brush="ButtonBrush4" UpdateChildrenStates="true" IsEnabled="true">
              <Children>
                <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Popup.Button.Text" Text="@ChangeNameString" />
              </Children>
            </ButtonWidget>
          </Children>
        </ListPanel>
      </Children>
    </Widget>
  </Window>
</Prefab>
